@model HappyCakeStore.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "Check Out Cart";
    Layout = "~/Views/Shared/_OrderLayout.cshtml";

}

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your cakes right away!</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <h3>Ship to</h3>
    <div class="form-group">
        <label class="control-label" for="name">Name:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @id = "name", @type = "text" })
    </div>
    <h3>Address</h3>
    foreach (var property in ViewData.ModelMetadata.Properties)
    {
        if (property.PropertyName != "Name" && property.PropertyName != "GiftWrap")
        {
            <div class="form-group">
                <label class="control-label">
                    @(property.DisplayName ?? property.PropertyName)
                </label>
                @Html.TextBox(property.PropertyName, null, new
                {
                    @class = "form-control"
                })
            </div>
        }
    }
    <h3>Options</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.GiftWrap)
            Gift wrap these items
        </label>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Complete order" />
    </div>

}

